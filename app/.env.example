# MCP Neo4j Integration Environment Variables
# Copy this file to .env and modify as needed

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=movies
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password123

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# MCP Server Configuration
MCP_SERVER_NAME=mcp-neo4j-integration
MCP_SERVER_VERSION=1.0.0

# MCP Service URLs (for manager)
MCP_DATA_MODELING_URL=http://mcp-data-modeling:8001
MCP_CYPHER_URL=http://mcp-cypher:8002

# Logging Configuration
LOG_LEVEL=INFO

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@movies.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Optional: Custom ports (if you need to avoid conflicts)
# POSTGRES_EXTERNAL_PORT=5432
# NEO4J_HTTP_PORT=7474
# NEO4J_BOLT_PORT=7687
# PGADMIN_PORT=8080
# MCP_MANAGER_PORT=8000
# MCP_DATA_MODELING_PORT=8001
# MCP_CYPHER_PORT=8002